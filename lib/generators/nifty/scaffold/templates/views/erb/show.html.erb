<h1><%= singular_name.titleize %>" %></h1>

<%- for attribute in model_attributes -%>
<p>
  <strong><%= attribute.human_name.titleize %>:</strong>
  <%%= @<%= instance_name %>.<%= attribute.name %> %>
</p>
<%- end -%>

<p>
<%- if action? :edit -%>
  <%%= link_to "Editar", <%= item_path :action => :edit, :instance_variable => true %>, :class => "button" %> 
<%- end -%>
<%- if action? :destroy -%>
  <%%= link_to "Borrar", <%= item_path :instance_variable => true %>, :confirm => 'Está seguro?', :method => :delete, :class => "button negative" %> 
<%- end -%>
<%- if action? :index -%>
  <%%= link_to "Índice", <%= items_path %>, :class => "button negative" %>
<%- end -%>
<%- if action? :new -%>
  <%%= link_to "<span class='icon plus'></span>Agegar".html_safe, <%= item_path :action => :new %>, :class => "button" %>
<%- end -%>
</p>
