<h1>Listado</h1>

<%- if action? :new -%>
<p><%%= link_to "<span class='icon plus'></span>Agegar".html_safe, <%= item_path :action => :new %>, :class => "button" %></p>
<%- end -%>

<table>
  <thead>
    <tr>
    <%- for attribute in model_attributes -%>
      <th><%= attribute.human_name.titleize %></th>
    <%- end -%>
      <th class="actions" colspan="3">Acciones</th>
    </tr>
  </thead>
  <%% for <%= instance_name %> in @<%= instances_name %> %>
    <tr>
    <%- for attribute in model_attributes -%>
      <td><%%= <%= instance_name %>.<%= attribute.name %> %></td>
    <%- end -%>
    <%- if action? :show -%>
      <td><%%= link_to image_tag("show.png"), <%= item_path %> %></td>
    <%- end -%>
    <%- if action? :edit -%>
      <td><%%= link_to image_tag("pencil.png"), <%= item_path :action => :edit %> %></td>
    <%- end -%>
    <%- if action? :destroy -%>
      <td><%%= link_to image_tag("delete.png"), <%= item_path %>, :confirm => 'EstÃ¡s seguro?', :method => :delete %></td>
    <%- end -%>
    </tr>
  <%% end %>
</table>
